<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/skin_colorPrimary</item>
        <item name="colorPrimaryDark">@color/skin_colorPrimaryDark</item>
        <item name="colorAccent">@color/skin_colorAccent</item>
        <item name="android:actionBarSize">@dimen/title_size</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="colorPrimary">@color/skin_colorPrimary</item>
        <item name="colorPrimaryDark">@color/skin_colorPrimaryDark</item>
        <item name="colorAccent">@color/skin_colorAccent</item>
        <item name="android:actionBarSize">@dimen/title_size</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- 去掉title的dialog样式 -->
    <style name="myDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>


    <style name="Translucent_NoTitle" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置window背景透明，也就是去边框 -->
    </style>


    <!-- 对话框的动画 -->
    <style name="dialogAnimationStyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/slide_in_from_leftbottom</item>
        <item name="@android:windowExitAnimation">@anim/slide_out_to_rightbottom</item>
    </style>


    <style name="myActionBarStyleRed" parent="android:Widget.ActionBar" >
        <item name="android:background">@color/skin_colorPrimary_mred</item>
    </style>

    <style name="myActionBarStyleYellow" parent="android:Widget.ActionBar" >
        <item name="android:background">@color/skin_colorPrimary_yellow</item>
    </style>

    <style name="myActionBarStylePurple" parent="android:Widget.ActionBar" >
        <item name="android:background">@color/skin_colorPrimary_purple</item>
    </style>


</resources>
